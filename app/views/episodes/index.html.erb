<h1>Listing episodes</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Podcast</th>
      <th>File size</th>
      <th>Lastmod</th>
      <th>Url</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |episode| %>
      <tr>
        <td><%= episode.name %></td>
        <td><%= episode.podcast_id %></td>
        <td><%= episode.file_size %></td>
        <td><%= episode.lastmod %></td>
        <td><%= episode.url %></td>
        <td><%= link_to 'Show', episode %></td>
        <td><%= link_to 'Edit', edit_episode_path(episode) %></td>
        <td><%= link_to 'Destroy', episode, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Episode', new_episode_path %>
